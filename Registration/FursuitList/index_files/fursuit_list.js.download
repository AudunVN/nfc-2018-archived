$(document).ready(function () {

    if (!_show_statistics) {
        $('#hideStatistics').show();
        $('#displayStatistics').hide();
        return;
    }

    $('#status').show();
    
    $('#CountryId').change(function () {
        _filter_country_id = $('#CountryId').val();
        fillFursuitData();
    });

    fillFursuitData();
});

